{
    "name"        : "tst/install-test",
    "description" : "SWC winner website",
    "authors"     : [
        {
            "name"    : "Teplitsa",
            "email"   : "support@te-st.ru",
            "homepage": "http://te-st.ru/"
        }
    ],
    "type"        : "project",
    "repositories": [
        {
            "type": "composer",
            "url" : "http://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "http://wp-languages.github.io"
        },
        {
            "type": "artifact",
            "url": "artifacts/"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wp-sync-db/wp-sync-db"
        },
        {
            "type": "vcs",
            "url": "https://github.com/webdevstudios/cmb2-post-search-field"
        },
		{
            "type": "vcs",
            "url": "https://github.com/mustardBees/cmb_field_map"
        }
    ],
    "config"      : {
        "vendor-dir": "wp-content/vendor",
        "secure-http" : false
    },
   "require"     : {
        "composer/installers": "~1.0",  
        "johnpbloch/wordpress" : ">=4.3",
        "wpackagist-plugin/cyr3lat" : "@stable",
        "wpackagist-plugin/crop-thumbnails": "@stable",
        "wpackagist-plugin/disable-comments" : "@stable",                
        "wpackagist-plugin/leyka" : "@stable",
        "wpackagist-plugin/media-search-enhanced": "@stable",
        "wpackagist-plugin/responsive-lightbox" : "@stable",       
		"wpackagist-plugin/posts-to-posts" : "@stable",     
        "wpackagist-plugin/wordpress-seo" : "@stable",
        "wpackagist-plugin/w3-total-cache": "@stable",        
        "wpackagist-plugin/cmb2": "@stable",
        "webdevstudios/cmb2-post-search-field" : "dev-master",
        "wpackagist-plugin/formidable": "@stable",
        "wpackagist-plugin/siteorigin-panels": "@stable",
        "wpackagist-plugin/so-widgets-bundle": "@stable",
        "wpackagist-plugin/tiny-compress-images": "@stable",
        "koodimonni-language/core-ru_ru": "*" ,
        "tst/cmb2-attached-posts" : ">=1.2.2",
		"tst/leaflet-maps-marker-pro" : ">=2.7.2",
		"mustardbees/cmb_field_map" : "dev-master"
    },
    "require-dev" : {
        "wp-sync-db/wp-sync-db" : "dev-master",
        "wpackagist-plugin/force-regenerate-thumbnails" : "@stable",
        "wpackagist-plugin/post-duplicator" : "@stable",
        "wpackagist-plugin/disable-wordpress-updates": "@stable",
        "wpackagist-plugin/term-management-tools": "@stable",
        "wpackagist-plugin/post-type-converter": "@stable",
		"wpackagist-plugin/wp-ultimate-csv-importer": "@stable"
    },
    "extra"       : {
        "wordpress-install-dir": "core",
        "dropin-paths": {
            "wp-content/languages/": ["vendor:koodimonni-language"]
        }
    }
}

